import discord
import asyncio

# Define your Discord token
TOKEN = 'Your-Token'

# Create a client instance
intents = discord.Intents.default()
intents.typing = False
intents.presences = False
client = discord.Client(intents=intents)

# Event handler for bot login
@client.event
async def on_ready():
    print(f'As {client.user.name} ({client.user.id})')
    print('------')

    # Run a loop to ping @everyone every time interval
    await send_everyone_ping()

# Function to send @everyone ping
async def send_everyone_ping():
    while True:
        # Replace these server ID with the ID of the server where you want to ping
        server_id = 0000000000000

        guild = client.get_guild(server_id)
        if guild:
            # Ping @everyone to all text channels at once
            for channel in guild.text_channels:
                await channel.send('@everyone') # you can edit the content of this bracket if you want the bot to send something else

        # Cooldown
        await asyncio.sleep(1)  # 3600 sek√∫nd = 1 hodina

# START
client.run(TOKEN)
